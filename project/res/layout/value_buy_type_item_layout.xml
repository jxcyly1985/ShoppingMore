<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/id_value_buy_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_value_buy_type_name_text_size"
            android:textColor="@drawable/value_buy_type_item_selector"
            android:paddingLeft="@dimen/dimen_value_buy_type_text_padding_h"
            android:paddingRight="@dimen/dimen_value_buy_type_text_padding_h"
            android:paddingTop="@dimen/dimen_value_buy_type_text_padding_v"
            android:paddingBottom="@dimen/dimen_value_buy_type_text_padding_v"
            android:layout_centerInParent="true">
    </TextView>

    <ImageView
            android:id="@+id/id_value_buy_type_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_widget_divider"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

    </ImageView>

</RelativeLayout>