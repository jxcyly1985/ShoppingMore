<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="@dimen/dimen_custom_dialog_title_width"
            android:layout_height="@dimen/dimen_custom_dialog_title_height"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/id_custom_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/dimen_custom_dialog_title_size"
                android:textColor="@color/title_color">

        </TextView>

    </LinearLayout>

</LinearLayout>